{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"],
			"@src/*": ["src/*"],
			"@root/*": ["/*"],
			"@assets/*": ["src/assets/*"],
			"@utils/*": ["src/utils/*"],
			"@components/*": ["src/components/*"],
			"@pages/*": ["src/pages/*"]
		},
		"isolatedModules": true,
		"strict": true,
		"skipLibCheck": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": false,
		"checkJs": false,
		"declaration": false,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"noEmitHelpers": true,
		"jsx": "react-jsx",
		"lib": ["dom", "dom.iterable", "esnext", "es2017"],
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"noEmit": true,
		"noEmitOnError": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"pretty": false,
		"removeComments": true,
		"sourceMap": false,
		"esModuleInterop": true
	},
	"compileOnSave": false,
	"include": ["src/**/*", ".storybook/**/*", "./vite.config.ts"],
	"exclude": ["node_modules", "dist"],
	"references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
